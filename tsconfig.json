{
  "compilerOptions": {
    "target": "ES2022", // Specifies the JavaScript version to target when transpiling code.
    "allowSyntheticDefaultImports": true, // Enables the use of 'define' for class fields.
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Specifies the libraries available for the code.
    "module": "ES2022", // Defines the module system to use for code generation.
    "skipLibCheck": true, // Skips type checking of declaration files.
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "config/*": ["src/config/*"],
      "store/*": ["src/store/*"],
      "types/*": ["src/types/*"],
    },

    /* Blunder mode */
    "moduleResolution": "Bundler", // Specifies how modules are resolved when building
    "allowImportingTsExtensions": false, // Allows importing TypeScript files with extensions.
    "resolveJsonModule": true, // Enables importing JSON modules.
    "isolatedModules": true, // Ensures each file is treated as separate module.
    "noEmit": true, // Prevents TypeScript from emitting output files.
    "jsx": "react-jsx", // Configure JSX support for React.

    /* Linting */
    "strict": true, // Enables strick type checking.
    "noUnusedLocals": true, // Flags unused local variables.
    "noUnusedParameters": true, // Flags unused function parameters.
    "noFallthroughCasesInSwitch": true, // Requires handling all cases in a switch statement.
    "declaration": true, // Generates declaration files for TypeScript.
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names.
  },
  "include": ["**/*", ".eslintrc.cjs", ".storybook/*"],
  "exclude": ["dist", "node_modules", "src/**/__docs__", "src/**/__test__"],
}
